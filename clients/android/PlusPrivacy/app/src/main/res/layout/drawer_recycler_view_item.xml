<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/drawer_recycler_view_item_ll"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/drawer_recycler_view_item_iv"
            android:layout_width="20dp"
            android:layout_gravity="center_vertical"
            android:layout_height="20dp" />

        <TextView
            android:text="Text"
            android:id="@+id/drawer_recycler_view_item_tv"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:textColor="@color/menu_text"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View

            android:background="@color/menu_first_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <View
            android:background="@color/menu_second_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>


</LinearLayout>