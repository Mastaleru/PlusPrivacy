<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/social_network_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/social_network_settings_facebook">

    <View
        android:id="@+id/facebook_settings_list_divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background_facebook_settings"/>

    <RelativeLayout
        android:layout_below="@id/facebook_settings_list_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recommended_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:scaleType="centerInside"
            android:visibility="invisible"
            android:src="@drawable/facebook_recommended" />

        <TextView
            android:id="@+id/question_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_toStartOf="@+id/arrow"
            android:layout_toEndOf="@id/recommended_icon"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/group_indicator_facebook_settings" />
    </RelativeLayout>

</RelativeLayout>