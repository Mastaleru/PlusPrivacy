<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/feedback_question_item_title"
        android:padding="@dimen/feedback_padding"
        android:layout_width="match_parent"
        android:background="?attr/colorAccent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/feedback_question_item_description"
        android:padding="@dimen/feedback_padding"
        android:background="@color/secondary_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/feedback_question_item_multiple_rating_layout_ratings"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/feedback_question_item_multiple_rating_layout_options"
        android:orientation="vertical"
        android:padding="@dimen/feedback_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

</LinearLayout>