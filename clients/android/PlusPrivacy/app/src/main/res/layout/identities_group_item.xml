<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/identities_list_background">

    <View
        android:id="@+id/first_divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/identities_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/default_identity_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/identity_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@+id/arrow"
            android:layout_toRightOf="@id/default_identity_iv"
            android:text="whatever.email@whatever.com"
            android:textColor="@color/identities_button_active_background"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/group_indicator_identities"
            android:scaleType="centerInside" />

    </RelativeLayout>

</LinearLayout>