<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Transparent Rectangle -->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="300dp"
                android:height="90dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

     <!--Colored Rectangle-->
    <item
        android:bottom="20dp">
        <shape android:shape="rectangle">
            <corners
                android:radius="4dp">

            </corners>
            <size
                android:width="300dp"
                android:height="80dp" />
            <solid android:color="@color/background_popup" />
        </shape>
    </item>

    <!-- Bottom Triangle -->
    <item
        android:width="80dp"
        android:height="40dp"
        android:left="90dp"
        android:right="110dp"
        android:top="30dp"
        android:bottom="0dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/background_popup" />
            </shape>
        </rotate>
    </item>

</layer-list>